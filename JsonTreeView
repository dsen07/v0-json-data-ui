// view-toggle.component.ts
import { Component, Input, Output, EventEmitter, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

type ViewType = 'structured' | 'json';

@Component({
  selector: 'app-view-toggle',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './view-toggle.component.html',
  styleUrls: ['./view-toggle.component.css']
})
export class ViewToggleComponent implements OnInit {
  @Input() view: ViewType = 'structured';
  @Output() viewChange = new EventEmitter<ViewType>();
  
  @Input() withIcons: boolean = false;
  @Input() darkMode: boolean = false;
  @Input() compact: boolean = false;
  @Input() disabled: boolean = false;
  
  ngOnInit(): void {}
  
  setView(newView: ViewType): void {
    if (this.disabled) return;
    
    this.view = newView;
    this.viewChange.emit(newView);
  }
  
  getToggleClasses(): string[] {
    const classes = ['view-toggle'];
    
    if (this.darkMode) classes.push('view-toggle-dark');
    if (this.withIcons) classes.push('toggle-with-icons');
    if (this.compact) classes.push('view-toggle-compact');
    if (this.disabled) classes.push('view-toggle-disabled');
    
    return classes;
  }
}
